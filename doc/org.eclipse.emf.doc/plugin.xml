<plugin
   id="org.eclipse.emf.doc"
   name="%pluginName"
   version="2.0.0"
   provider-name="%providerName">

   <requires>
      <import plugin="org.eclipse.help"/>
   </requires>


<!-- ====================================================================== -->
<!-- Define primary TOC                                                     -->
<!-- ====================================================================== -->
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
   </extension>

<!-- ====================================================================== -->
<!-- Define TOCs                                                            -->
<!-- ====================================================================== -->
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="tutorials.xml">
      </toc>
      <toc
            file="javadoc.xml">
      </toc>
   </extension>

</plugin>
